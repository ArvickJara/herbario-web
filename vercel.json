{
    "version": 2,
    "functions": {
        "api/server.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/server"
        },
        {
            "source": "/((?!api|uploads|assets|_next|favicon.ico|.*\\..*).*)",
            "destination": "/index.html"
        }
    ]
}